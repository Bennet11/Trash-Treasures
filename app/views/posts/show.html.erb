<div class="container">
  <div class="col-md-4">
    <%= link_to "Edit Post", edit_post_path %>
    <%= link_to "Sold", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Mark item as Sold?'} %>
  </div>

  <div class="center">
    <h1><%= @post.title %></h1>
  </div>

  <div class="col-md-4">
    <p><%= @post.description %></p>
  </div>

  <div class="col-md-4">
    <p><%= @post.number %></p>
  </div>

</div>
