<div class="container">
  <div class="col-md-4">
    <%= link_to "Edit Post", edit_post_path, class: 'btn btn-success' %>
    <%= link_to "Sold", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Mark item as Sold?'} %>
  </div>

  <div class="center">
    <%= image_tag @post.image.url(:thumb) %>
  </div>

  <div class="center">
    <h1><%= @post.title %></h1>
  </div>

  <div class="col-md-4">
    <h4>Description</h4>
    <p><%= @post.description %></p>
  </div>

  <div class="col-md-4">
    <h4>price</h4>
    <p><%= @post.price %></p>
  </div>

  <div class="col-md-4">
    <h4>number</h4>
    <p><%= @post.number %></p>
  </div>

</div>
