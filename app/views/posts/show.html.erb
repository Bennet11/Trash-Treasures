<div class="container">
  <div class="row">

    <div class="col-md-4">
      <% if policy(@post).update? %>
      <%= link_to "Edit Post", edit_post_path, class: 'btn btn-success' %>
      <% end %>

      <% if current_user != @post.owner %>
      <%= render partial: 'charges/form' %>
      <% end %>

      <% if policy(@post).destroy? %>
      <%= link_to "Sold", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Mark item as Sold?'} %>
      <% end %>
    </div>
    <br />

    <div class="col-md-4">
      <strong><%= @post.category.name %></strong>
    </div>

    <div class="center">
      <%= link_to image_tag(@post.image.url(:thumb)), @post.image.url(:original), popup: ['original_image', 'height=900, width=900'] %>
    </div>

    <div class="center">
      <h1><%= @post.title %></h1>
    </div>

    <!--- My link to the owner of a post --->
    <div class="center">
      <small>by: <%= link_to @post.owner.handle, profile_path(@post.owner) %></small>
    </div>
    <!----->
    <div class="col-md-4">
      <h4>Description</h4>
      <p><%= @post.description %></p>
    </div>
  </div>

  <div class="row">

    <div class="col-lg-12">
      <div class="pull-right">
        <% if user_signed_in? && current_user != @post.owner %>
        <%= render partial: 'watchlists/watchlist', locals: { post: @post} %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-md-6">
      <h4>price</h4>
      <p><%= number_to_currency @post.price %></p>
    </div>

    <div class="col-md-6">
      <h4>number</h4>
      <p><%= @post.number %></p>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">

      <div id='user-location'></div>
    </div>
  </div>

  <script>
    $(document).ready(function() {
      L.mapbox.accessToken = '' // put mapbox access token here
      coords = [<%= @post.owner.latitude %>, <%= @post.owner.longitude %>];
      var map = L.mapbox.map('user-location', 'mapbox.streets').setView(coords, 13);
      var marker = new L.Marker(new L.LatLng(<%= @post.owner.latitude %>, <%= @post.owner.longitude %>));
      map.addLayer(marker);
    });
  </script>
</div>
