<div class="media">
  <div class="media-left">
    <% if conversation.originator.image == present? %>
      <%= image_tag conversation.originator.image %>
    <% else %>
      <a href="https://www.google.com/url?sa=i&rct=j&q=&esrc=s&source=images&cd=&cad=rja&uact=8&ved=0ahUKEwjq8qC2gbjOAhUZS2MKHSmIBa8QjRwIBw&url=https%3A%2F%2Fcommons.wikimedia.org%2Fwiki%2FFile%3ANo_image_available.svg&psig=AFQjCNGqSMb-aCrk_EzRTqI8NQiOmTUVAA&ust=1470958460245777"></a>
    <% end %>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= conversation.originator.name %> <br>
      <small><b>Subject: </b><%= conversation.subject %></small><br>
      <small><b>Date: </b><%=  conversation.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
    </h4>
    <%= truncate conversation.messages.last.body, length: 145 %>
    <%= link_to "View", conversation_path(conversation)  %>
  </div>
</div>
