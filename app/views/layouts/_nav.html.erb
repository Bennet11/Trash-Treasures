<div class="navbar-header">
  <div class="navbar-brand"><%= link_to image_tag("trash_and_treasure.png", size: "50x50"), home_index_path %></div>
</div>

<ul class="nav nav-tabs">
  <% if user_signed_in? %>
    <li class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
          <% if current_user.image? %>
            <%= image_tag current_user.image, size: "70x70" , class: "round_img" %>
          <% else %>
            <%= gravatar_for(@user.email, 64) %>
          <% end %>
        </button>

      <ul class="dropdown-menu">
        <li>
          <%= link_to "Profile", user_path(current_user) %>
        </li>
        <li>
          <div class="chat_link">
            <%= link_to mailbox_inbox_path do %>
              <span class="label label-danger"><%=unread_messages_count%></span>
              <span>Messages</span>
            <% end %>
          </div>
        </li>

        <li>
          <%= link_to "Settings", edit_user_registration_path, class: 'navbar-link' %>
        </li>
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-link' %>
        </li>

      </ul>
    </li>  
  <% end %>


  <li>
    <h1 id="title">Trash and Treasures</h1>
  </li>

  <div class="pull-right user-info">

    <% if !user_signed_in? %>
      <%= link_to "Sign Up", new_user_registration_path, class: 'navbar-link' %> -
      <%= link_to "Sign In", new_user_session_path, class: 'navbar-link' %>
    <% end %>
  </div>

  <li>
    <%= link_to "About", home_about_path %>
  </li>

  <div id="search_box">
    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag 'keyword', nil %>
    <% end %>
  </div>

</ul>
